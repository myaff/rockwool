.modal {
  fixed(0px, 0px);
  size(100vw, 100%);
  height: 100%;
  z-index: 99;
  display: none;
  .layout & {
     width: 100vw;
  }
  &__bg {
    absolute(0px, 0px);
    size(100%);
    background: rgba(#374a48, 0.9);
  }
  &__window {
    max-width: 980px;
    width: 100%;
    background: $white;
    absolute(50%, 50%);
    transform: translate(-50%, -50%);
  }
  &__close {
    absolute(30px);
    right: 30px;
    z-index: 5;
    
    .is-submitted & {
      opacity: 0;
    }
  }
  &__content {
    padding: 40px 100px;
  }
}

.modal-form {
  &__heading {
    .title,
    .subtitle {
      text-align: center;
    }
  }
  &__form {
    transition: opacity 0.3s;
    .is-submitted & {
      pointer-events: none;
      opacity: 0;
    }
  }
  &__form &__heading {
    margin-bottom: 40px;
    .title {
      line-height: 0.7;
    }
    .subtitle {
      margin-top: 0px;
    }
  }
  &__result {
    display: none;
    absolute(0px, 0px);
    size(100%);
  }
  &__result &__heading {
    margin: 80px auto;
    .subtitle {
      margin-top: 10px;
    }
  }
  &__actions {
    text-align: center;
  }
}