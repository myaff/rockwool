/* ==========================================================================
   COLOR PACK
   ========================================================================== */
if ($color-pack)
  for color_name, color_value in $colors-map
    global-color(color_name, color_value)

  for color_name, color_value in $shades
    global-color(color_name, color_value)
    
  for color_name, color_value in $socials
    global-color(color_name, color_value)

  for color_name, color in $colors-tree
    for color_type, color_value in color
      if color_type == 'base'
        global-color(color_name, color_value)
      else
        global-color-accent(color_name, color_value, color_type)
