.page {
  &--faq {
    .faq {
      padding-top: 1rem;
      @media $mobile {
        padding: (60*100/750)vw 0 (100*100/750)vw;
      }
      @media $desktop {
        padding-bottom: 85px;
      }
      &__heading {
        margin-bottom: 3rem;
        @media $mobile {
          margin-bottom: (60*100/750)vw;
        }
      }
      &__item {
        margin-bottom: 2rem;
        @media $mobile {
          margin-bottom: (60*100/750)vw;
        }
      }
    }
  }
}