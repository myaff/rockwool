.header {
  fixed(0px, 0px);
  width: 100%;
  background: $primary;
  z-index: 9;
  box-shadow: 0 0 50px rgba(#000, 0.8);
  
  .layout--dummy & {
    @media $mobile {
      background: url("../img/main-mobile.png") top center no-repeat;
    }
  }
  
  &__content {
    padding: 12px 0;
    flexy(space-between, center);
  }
  
  &__logo {
    @media $desktop {
      margin-right: 100px;
    }
    img {
      display: block;
    }
  }
  
  &__menu {
    @media $desktop {
      flex: 1 1 510px;
    }
    @media $mobile {
      display: none;
    }
  }
  
  .layout--dummy & {
    @media $desktop {
      display: none;
    }
  }
}

.header-screen {
  background: url("../img/main.png") bottom center no-repeat;
  background-size: cover;
  .layout--dummy & {
    background: url("../img/main-dummy.png") bottom center no-repeat;
    background-size: cover;
    @media $mobile {
      background: url("../img/main-mobile.png") bottom center no-repeat;
      background-size: cover;
    }
  }
  
  &__content {  
    padding-top: 60px;
    height: 553px;
    .layout--dummy & {
      height: 460px;
      @media $mobile {
        height: 78.67vw;
      }
    }
  }
  &__img {
    absolute();
    right: 0;
    bottom: -80px;
    width: 360px;
    z-index: 3;
    
    .layout--dummy & {
      width: 440px;
      bottom: -260px;
      @media screen and (max-width: 990px) {
        width: (300*100/750)vw;
        bottom: (-200*100/750)vw;
      }
      @media $mobile {
        width: 37.33vw ;
        bottom: -5.33vw ;
      }
    }
    
    img {
      display: block;
      width: 100%;
    }
  }
}